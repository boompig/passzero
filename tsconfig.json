{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        // "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "static/js/src",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "exclude": [
        "static/js",
        "typescript/standalone"
    ]
}
