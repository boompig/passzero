{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["webworker", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        // "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "static/js/src",
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "exclude": [
        "static/js",
    ]
}
