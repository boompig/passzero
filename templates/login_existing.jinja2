{% include "flash_messages.jinja2" %}
<div id="form-container">
    <form method="POST" action="/login" id="login-existing-form" role="form">
        <h1 class="title">
            Login to PassZero
        </h1>

        <div class="alert alert-danger" id="error-msg-container" role="alert">
            <div id="error-msg"></div>
        </div>

        <div class="alert alert-warning" id="progress-alert" role="alert">
            <span>This is taking longer than usual...</span>
        </div>

        <span class="form-error" id="form-error-email"></span>
        <input type="text" class="form-control" name="username_or_email" tabindex="1"
                placeholder="username or email" required="true" autocomplete="username">

        <span class="form-error" id="form-error-password"></span>
        <input type="password" class="form-control" name="password" tabindex="2"
                placeholder="password" required="true">
        <label for="remember">
            <input type="checkbox" name="remember" tabindex="3">
            <span>Remember me</span>
        </label>

        <a id="forgot-password" href="{{ url_for("main_routes.recover_password") }}">Forgot Password</a>

        <button id="submit-btn" type="submit" name="submit">Log In</button>
    </form>
</div>
