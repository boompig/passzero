{%- extends "layout-react.jinja2" -%}

{% block js %}
    <script src="{{ url_for("static", filename="js/dist/logoutTimer.min.js") + "?build=" + config['BUILD_ID'] }}"></script>
    {# custom JS - webpack bundle #}
    <script src="{{ url_for("static", filename="js/dist/new-doc.bundle.js") + "?build=" + config['BUILD_ID'] }}"></script>
{% endblock %}

{% block css %}
    {# NOTE: bootstrap 4 already included in layout template #}
    {# NOTE: fontawesome solid glyphicons already included in layout template #}
    {# custom style #}
    <link rel="stylesheet" href="{{ url_for("static", filename="css/dist/new-doc.min.css") + "?build=" + config['BUILD_ID'] }}">
{% endblock %}

{% block body %}
    <div id="react-root">
	</div>
    <form class="hidden">
		<input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token() }}">
        <input type="hidden" name="document_id" id="document_id" value="{{ document_id }}">
    </form>
{% endblock %}
