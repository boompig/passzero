{%- extends "layout-react.jinja2" -%}

{% block js %}
    {# custom JS - webpack bundle #}
    <script src="{{ url_for("static", filename="js/dist/docs.bundle.js") + "?build=" + config['BUILD_ID'] }}"></script>
{% endblock %}

{% block css %}
    {# NOTE: bootstrap 4 already included in layout-react template #}
    {# NOTE: fontawesome solid glyphicons already included in layout-react template #}
    {# custom style #}
    <link rel="stylesheet" href="{{ url_for("static", filename="css/dist/docs.min.css") + "?build=" + config['BUILD_ID'] }}">
{% endblock %}

{% block body %}
    <div id="react-root"></div>
    <form class="hidden">
		<input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token() }}">
    </form>
{% endblock %}
