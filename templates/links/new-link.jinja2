{%- extends "layout-react.jinja2" -%}

{% block js %}
    <script src="{{ url_for("static", filename="js/dist/logoutTimer.min.js") + "?build=" + config['BUILD_ID'] }}"></script>
    {# custom JS - webpack bundle #}
    <script src="{{ url_for("static", filename="js/dist/new-link.bundle.js") + "?build=" + config['BUILD_ID'] }}"></script>
{% endblock %}

{% block css %}
    {# NOTE: bootstrap 4 already included in layout template #}
    {# NOTE: fontawesome solid glyphicons already included in layout template #}
    {# custom style #}
    <link rel="stylesheet" href="{{ url_for("static", filename="css/dist/new-link.min.css") + "?build=" + config['BUILD_ID'] }}">
{% endblock %}

{% block body %}
    <div id="root">
		<div class="alert alert-warning">
			<strong>Under construction!</strong> Stay tuned
		</div>
	</div>
    <form class="hidden">
		<input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token() }}">
		<input type="hidden" name="master_password" id="master_password" value="{{ session['password'] }}">
        <input type="hidden" name="link_id" id="link_id" value="{{ link_id }}">
        {% if link_id > 0 %}
            <input type="hidden" name="service_name" id="service_name" value="{{ service_name }}">
            <input type="hidden" name="link" id="link_value" value="{{ link }}">
        {% endif %}
    </form>
{% endblock %}
