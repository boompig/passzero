{# this layout is the same as layout-react but without HTML scaffolding (incl navbar) and without main.css #}
{# this layout should only be used on internal views #}
<!DOCTYPE html>
<html lang="en" >
    <head>
        <meta charset="utf-8">
        {# for mobile #}
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# for IE - use latest engine #}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>
            {% if title %}
                {{ title|safe }}
            {%- else -%}
                PassZero
            {%- endif -%}
        </title>

        <link rel="manifest" href="/manifest.json">
        <link rel="icon" type="image/png" href="/favicon.png">
        <link rel="apple-touch-icon" href="/apple-touch-icon.png">

        {% if config["OFFLINE"] %}
            <link rel="stylesheet" href="/lib/bootstrap.min.css" />
        {% else %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/css/bootstrap.min.css"
                integrity="sha512-SbiR/eusphKoMVVXysTKG/7VseWii+Y3FdHrt0EpKgpToZeemhqHeZeLWLhJutz/2ut2Vw1uQEj2MbRF+TVBUA=="
                crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endif %}

        {# NOTE: custom CSS included in typescript #}
    </head>
    <body>
        {% block body%}
        {% endblock %}

        {% block js %}
        {% endblock %}
    </body>
</html>
